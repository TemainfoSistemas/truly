{
  "name": "truly-ui",
  "title": "Truly-UI",
  "description": "Web Components for Desktop Applications.",
  "version": "0.0.0-development",
  "repository": "https://github.com/TemainfoSistemas/truly-ui.git",
  "author": "Temainfo Sistemas <suporte@temainfo.com.br>",
  "homepage": "http://truly-ui.tk",
  "keywords": [
    "angular",
    "ui",
    "desktop",
    "ng",
    "electron",
    "angular2",
    "grid",
    "datagrid",
    "input",
    "mask",
    "SPA",
    "button"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TemainfoSistemas/truly-ui.git/issues"
  },
  "engines": {
    "node": ">=7.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "jest --config=jest.conf.json",
    "test:watch": "jest --watch --config=jest.conf.json",
    "test:ci": "jest --config=jest.conf.json --runInBand",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "prebuild:library": "rimraf dist tmp",
    "build:library": "npm run inline-template && npm run compile && npm run clean",
    "build:showcase": "ng build --aot -prod",
    "ci": "npm run lint && npm run test && npm run build:library && npm run build:showcase",
    "release": "ngc -p tsconfig-release.json && npm run clean",
    "inline-template": "gulp inline-templates",
    "compile": "ngc -p tsconfig-release.json",
    "postcompile": "npm run clean && npm run copy:marckdowns && npm run create:packagejson && npm run copy:aotimports && npm run copy:assets",
    "clean": "rimraf tmp coverage",
    "copy:aotimports": "node ./tools/scripts/copy-aot-imports.js",
    "copy:marckdowns": "node ./tools/scripts/copy-marckdowns-assets.js",
    "copy:assets": "node ./tools/scripts/copy-assets.js",
    "create:packagejson": "node ./tools/scripts/create-package-json.js",
    "semantic-release": "semantic-release"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@types/reflect-metadata": "0.0.5",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "intl": "^1.2.5",
    "ionicons-npm": "^2.0.1",
    "jquery": "^3.2.1",
    "ngx-highlight-js": "^1.0.2",
    "ngx-highlightjs": "^1.4.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.14"
  },
  "peerDependencies": {
    "@angular/common": "^5.0.0",
    "@angular/core": "^5.0.0",
    "font-awesome": "^4.7.0",
    "ionicons-npm": "^2.0.1"
  },
  "devDependencies": {
    "@angular-devkit/core": "^0.3.1",
    "@angular/cli": "1.5.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@types/jest": "^21.1.0",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.2.0",
    "gulp": "^3.9.1",
    "gulp-inline-ng2-template": "^4.0.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "jest": "^20.0.4",
    "jest-preset-angular": "^4.0.0",
    "node-sass": "^4.6.0",
    "pre-commit": "^1.2.2",
    "protractor": "~5.1.2",
    "rimraf": "^2.6.2",
    "semantic-release": "^12.4.1",
    "ts-node": "~6.0.3",
    "tslint": "~5.7.0",
    "typescript": "~2.4.2"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": true,
        "pkgRoot": "dist"
      },
      {
        "path": "@semantic-release/github",
        "assets": "dist/*.tgz"
      }
    ]
  }
}
